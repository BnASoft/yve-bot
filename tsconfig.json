{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "outDir": "compiled",
    "allowJs": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noResolve": false,
    "paths": {
      "~test/*": ["test/*"]
    }
  },
  "files": ["src/core/index.ts", "src/ui/index.ts"],
  "include": ["src/ext/types"],
  "exclude": ["test"]
}
